<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.GridPane?>
<BorderPane fx:id="root" prefHeight="656.0" prefWidth="1037.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.qprove_p.codesnippetstash.gui.AppController">

    <top>
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="1037.0" spacing="10" styleClass="top-bar">
            <Button fx:id="hamburgerBtn" onAction="#toggleSideMenu" text="â˜°" />
            <TextField fx:id="searchBar" promptText="Search..." minWidth="192"/>
            <Region prefWidth="528.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="nSnippetBtn">
                <graphic>
                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true">
                        <image>
                            <Image url="@../icons/snippet.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="nTagBtn">
                <graphic>
                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true">
                        <image>
                            <Image url="@../icons/tag.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="settingsBtn">
                <graphic>
                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true">
                        <image>
                            <Image url="@../icons/cog.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>

    <left>
        <VBox fx:id="sideMenu" prefHeight="574.0" prefWidth="240.0" spacing="10" styleClass="side-menu">
            <Button fx:id="allBtn" text="All" />
            <Button fx:id="favouritesBtn" text="Favourites" />
        </VBox>
    </left>

   <center>
      <ScrollPane fx:id="contentArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
        <content>
            <GridPane fx:id="scrollContent" hgap="10" vgap="10">
            </GridPane>
        </content>
      </ScrollPane>
   </center>
</BorderPane>
